{
  "name": "moments",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node build/server/app",
    "build": "rimraf ./build && npm run build-server && npm run build-client",
    "build-server": "tsc",
    "build-client": "webpack --mode production --config ./scripts/webpack.config.js",
    "dev-server": "ts-node-dev --respawn --transpile-only ./server/app",
    "dev-client": "webpack serve --mode development --open --hot --config ./scripts/webpack.config.js",
    "gcp-build": "npm run build",
    "lint": "eslint . && prettier --write ."
  },
  "dependencies": {
    "@google-cloud/datastore": "^6.2.0",
    "@netflix/nerror": "^1.1.3",
    "axios": "^0.21.0",
    "cookie-parser": "^1.4.4",
    "debug": "^2.6.9",
    "dotenv": "^8.2.0",
    "express": "^4.16.1",
    "http-errors": "^1.6.3",
    "morgan": "^1.9.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "yup": "^0.29.3"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-react": "^7.12.7",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.9",
    "@types/morgan": "^1.9.2",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "babel-loader": "^8.2.2",
    "copyfiles": "^2.4.1",
    "css-loader": "^5.0.1",
    "eslint": "7.2.0",
    "eslint-config-airbnb": "18.2.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jsx-a11y": "^6.3.0",
    "eslint-plugin-prettier": "^3.2.0",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "4.0.0",
    "file-loader": "^6.2.0",
    "html-loader": "^1.3.2",
    "html-webpack-plugin": "^4.5.0",
    "husky": ">=4",
    "lint-staged": ">=10",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "style-loader": "^2.0.0",
    "ts-loader": "^8.0.11",
    "ts-node-dev": "^1.0.0",
    "typescript": "^4.1.2",
    "webpack": "^5.10.0",
    "webpack-cli": "^4.2.0",
    "webpack-dev-server": "^3.11.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": "eslint --fix"
  }
}
